{
  "name": "@sunrise/contracts",
  "version": "0.1.2",
  "description": "Sunrise Art Club solidity contracts & artifacts",
  "author": "Sunrise Art",
  "homepage": "https://sunrise.art",
  "license": "GPL-3.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "clean": "rimraf dist tsconfig.build.tsbuildinfo",
    "build": "yarn build:sol && yarn build:ts && yarn build:declarations",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:sol": "npx hardhat compile",
    "build:declarations": "cp typechain/*.d.ts dist/typechain",
    "hardhat": "npx hardhat",
    "task:accounts": "npx hardhat accounts",
    "task:deploy": "npx hardhat deploy",
    "task:verify-etherscan": "npx hardhat verify-etherscan",
    "task:mint-sunrise": "npx hardhat mint-sunrise",
    "task:populate-descriptor": "npx hardhat populate-descriptor",
    "task:run-local": "npx hardhat run-local",
    "task:get-bytecode": "npx hardhat get-bytecode",
    "task:upload-nfts": "npx hardhat upload-nfts",
    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "@float-capital/solidity-coverage": "^0.7.17",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.1.0",
    "@openzeppelin/contracts-upgradeable": "^4.1.0",
    "@openzeppelin/hardhat-upgrades": "^1.8.2",
    "@pinata/sdk": "^1.1.23",
    "@typechain/ethers-v5": "^6.0.1",
    "@types/express": "^4.17.11",
    "@types/prompt": "^1.1.0",
    "base64-sol": "^1.0.1",
    "csv-parser": "^3.0.0",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "5.4.1",
    "hardhat": "^2.6.1",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.5",
    "nft.storage": "^5.0.0",
    "prettier-plugin-solidity": "^1.0.0-beta.12",
    "prompt": "^1.1.0"
  }
}